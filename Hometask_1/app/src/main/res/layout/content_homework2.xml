<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_main_activity__hw2"
    tools:context="com.atrofimenko.hometask_1.Homework2_Activity">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/text_nFib"
        android:textSize="25sp"
        android:layout_alignParentTop="true"
        android:text="@string/textfibonacci" />
    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edit_nFib"
        android:inputType="number"
        android:layout_below="@+id/text_nFib"
        android:textSize="45sp"
        android:hint="5" />
    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btn_Fibonacci"
        android:text="@string/textBtn_find"
        android:layout_below="@+id/edit_nFib"
        android:layout_centerHorizontal="true"
        android:textSize="25sp" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/text_fib"
        android:textSize="45dp"
        android:layout_below="@+id/btn_Fibonacci"
        android:hint="0" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:id="@+id/edit_nFactorial"
        android:textSize="45dp"
        android:layout_below="@+id/text_nFactorial"
        android:hint="5" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/textBtn_find"
        android:id="@+id/btn_factorial"
        android:layout_below="@+id/edit_nFactorial"
        android:layout_centerHorizontal="true"
        android:textSize="25sp" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/text_nFactorial"
        android:text="@string/textFactorial"
        android:textSize="25dp"
        android:layout_below="@+id/text_fib"/>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/text_factorial"
        android:textSize="45dp"
        android:layout_below="@+id/btn_factorial"
        android:hint="0" />

</RelativeLayout>
